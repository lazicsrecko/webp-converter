<UserControl x:Class="ImageConverter.View.MultipleImageConvertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageConverter.View"
             xmlns:viewmodel="clr-namespace:ImageConverter.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:MultipleImageConvertViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="350" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--#region Column 0 -->
        
        <Label 
            Grid.Row="0"
            FontSize="16"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="10"
            >Multiple images conversion</Label>
        <StackPanel 
            Grid.Column="0"
            Grid.Row="1"
            Margin="10"
        >
            <Label>Images path:</Label>
            <ListBox
                Height="250"
                Width="350"
                x:Name="ImagePathList"
                HorizontalAlignment="Left"
                ItemsSource="{Binding ImagesPaths.FileNames}"/>
            <Button
                HorizontalAlignment="Left"
                Width="80"
                Height="20"
                Margin="0, 10, 0, 0"
                Content="Select Images"
                Command="{Binding SelectImagesCommand}"
                />
        </StackPanel>
        <Button 
            Grid.Row="2"
            HorizontalAlignment="Left"
            Height="20"
            Width="80"
            Margin="10, 10, 0, 0"
            Content="Back"
            Command="{Binding BackCommand}"
            />
        
        <!--#endregion-->

        <!--#region Column 1 -->

        <Label
            Grid.Column="1"
            FontSize="16"
            FontWeight="Bold"
            VerticalContentAlignment="Center"
        >
            Converter Options:    
        </Label>
    
        <Grid Grid.Column="1" Grid.Row="1">
            <local:ConverterOptionsView DataContext="{Binding ConverterOptionsDataContext}" />
        </Grid>
        <Button
            Grid.Column="1"
            Grid.Row="2"
            Height="20"
            Width="80"
            HorizontalAlignment="Left"
            Margin="10, 10, 0, 0"
            Content="Convert"
            Command="{Binding ConvertImagesCommand}"
            />
        
        <!--#endregion-->
    </Grid>
</UserControl>
